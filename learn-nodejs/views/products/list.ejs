<div class="row row-cols-md-4 mb-4">
    <% productsArr.products.forEach(prod=> { %>
        <div class="col-md-3 col-sm-12 mb-4">
            <div class="card">
                <img src="<%= prod.thumbnail %>" class="card-img-top w-100" alt="Fissure in Sandstone" width="100" height="150"/>
                <div class="card-body" style="min-height: 200px;">
                    <h5 class="card-title">
                        <%= prod.title %>
                    </h5>
                    <p class="card-text">
                        <%= prod.price %>$
                    </p>
                    <a href="#!" class="btn btn-primary">Buy</a>
                </div>
            </div>
        </div>
        <%}); %>
</div>