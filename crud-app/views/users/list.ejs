<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD APP</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css" rel="stylesheet" />
    <!-- Jquery cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
        integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous"
        referrerpolicy="no-referrer"></script>
</head>

<body>
    <div class="container">
        <%- include('../partials/header') %>
            <div class="card my-4">
                <div class="card-header text-center">
                    <h3>LIST</h3>
                </div>
            </div>
            <div class="text-center">
                <!-- start form -->
                <form action="/users/search" method="get">
                    <div class="row mb-3">
                        <div class="col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="name" placeholder="Search name...">
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="username" placeholder="Search username...">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 col-sm-12">
                            <input type="text" class="form-control" name="email" placeholder="Search email...">
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <select name="role">
                                <option disabled selected>Search role...</option>
                                <option value="1">1 - User</option>
                                <option value="2">2 - Admin</option>
                                <option value="3">3 - Manager</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3 text-center">
                        <div class="col">
                            <button class="btn btn-primary">
                                Search
                            </button>
                        </div>
                    </div>
                </form>
                <!-- end form -->
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Role name</th>
                            <th>CreatedAt</th>
                            <th>CreatedBy</th>
                            <th>UpdatedAt</th>
                            <th>UpdatedBy</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.name %>
                                </td>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.password.length> 10? user.password.slice(0,10) + '...': user.password %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.role %>
                                </td>
                                <td>
                                    <%= user.role==1? 'User' : (user.role==2? 'Admin' :'Manager') %>
                                </td>
                                <td>
                                    <%= user.created_at? dayjs(user.created_at).format('DD/MM/YYYY HH:mm:ss'): 'null' %>
                                </td>
                                <td>
                                    <%= user.created_by %>
                                </td>
                                <td>
                                    <%= user.updated_at? dayjs(user.updated_at).format('DD/MM/YYYY HH:mm:ss'): 'null' %>
                                </td>
                                <td>
                                    <%= user.updated_by || 'null' %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a href="/users/edit/<%= user.id %>" class="btn btn-secondary">Edit</a>
                                        <a class="btn btn-danger" id="delUserBtn" data-user-id="<%= user.id %>">Del</a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
    </div>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '#delUserBtn', function () {
                let userId = $(this).attr('data-user-id');
                const check = confirm('Are you sure you want to delete this users?');
                if (check) {
                    $.ajax({
                        type: 'DELETE', url: `/api/users/${userId}`,
                        success: function (res) {
                            alert(res.message);
                            location.reload();
                        },
                        error: function (response, status, error) {
                            console.log(response, status, error);
                        }
                    });
                }
            });
        })
    </script>
</body>

</html>