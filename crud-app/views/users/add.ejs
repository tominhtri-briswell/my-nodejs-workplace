                    <form id="addUserForm" method="POST" action="/users/addPage">
                        <div class="row mb-4">
                            <div class="col-md-6 col-sm-12">
                                <label for="">Name:</label>
                                <input type="text" id="form6Example1" class="form-control" name="name" placeholder="Name" <%=dataBack.name?
